@using Mogym.Common
@model Mogym.Application.Records.Permission.CreatePermissionRecord
@{
    ViewBag.Title = "ایجاد دسترسی";
    Layout = "_Layout";
}

<section class="content">
    <form asp-action="Create" method="post" class="container-fluid" id="form-create-permission">
        <div class="row">
            <div class="col-md-6">

                <div class="card">
                    <div class="card-header bg-success-card">
                        <h3 class="card-title">تعریف نقش جدید</h3>
                    </div>
                    <div class="card-body py-5">
                        <div class="form-group row">
                            <label class="pt-1" >عنوان فارسی </label>
                            <input class="form-control" asp-for="PersianName" />
                            <span class="text-danger" asp-validation-for="PersianName"></span>
                        </div>
                        <div class="form-group row">
                            <label class="pt-1" >عنوان انگلیسی </label>
                            <input class="form-control" asp-for="EnglishName" />
                            <span class="text-danger" asp-validation-for="EnglishName"></span>
                        </div>
                        <div class="form-group row">
                            <label class="pt-1" >فعال باشد؟</label>
                            <select class="js-example-disabled-results form-control" asp-for="IsActive">
                                <option value="@null">فعال/غیرفعال</option>
                                <option value="@((int)EnumYesNo.Yes)">@(EnumYesNo.Yes.GetEnumDescription())</option>
                                <option value="@((int)EnumYesNo.No)">@EnumYesNo.No.GetEnumDescription())</option>
                            </select>
                        </div>
                        <div class="form-group row">
                            <label class="pt-1" >آیا</label>
                            <select class="js-example-disabled-results form-control" asp-for="IsActive">
                                <option value="@null">فعال/غیرفعال</option>
                                <option value="@((int)EnumYesNo.Yes)">@(EnumYesNo.Yes.GetEnumDescription())</option>
                                <option value="@((int)EnumYesNo.No)">@EnumYesNo.No.GetEnumDescription())</option>
                            </select>
                        </div>
                    </div>

                    <div class="card-footer">
                        <div class="form-group row">
                            <div class="col-md-6">
                                <p class="text-red text-right mt-2 font-weight-bold">@TempData["message"]</p>
                            </div>
                            <div class="form-actions-buttons col-md-6">
                                <input type="submit" value="ثبت" class="btn btn-success-card" />
                                <a asp-action="Index" class="btn btn-secondary py-2">بازگشت </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </form>
</section>


@section Scripts{
    <script>

$(document).ready(function() {
     $("#form-create-permission").validate({
                rules: {
                    PersianName: {
                        required: true
                    },
                    EnglishName: {
                        required: true
                    },
                                                      
        },
        messages: {
            PersianName: {
                required:"پر کردن نام فارسی الزامی است",
            },
            EnglishName: {
                required:"پر کردن نام انگلیسی الزامی است",
            }
        }
    })


})
        </Script>
}
