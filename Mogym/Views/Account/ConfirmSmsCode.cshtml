@model Mogym.Application.Records.User.ConfirmSmsRecord


<!DOCTYPE html>
<html lang="fa">

<head>
    <title>ارسال کد تايید - موجیم</title>

    <!-- Styles -->
    <link rel="stylesheet" type="text/css" href="~/assets/styles/style.css" />
    <link rel="stylesheet" type="text/css" href="~/assets/demo/style-demo.css" />
    <link rel="stylesheet" type="text/css" href="~/assets/styles/rtl.css" />

    <!-- Mapbox-->


</head>
<body class="bg-triangles">
    <!-- Preloader -->
    <div class="preloader">
        <div class="preloader__wrap">
            <div class="circle-pulse">
                <div class="circle-pulse__1"></div>
                <div class="circle-pulse__2"></div>
            </div>
            <div class="preloader__progress"><span></span></div>
        </div>
    </div>

    <main class="main">
        <div class="container gutter-top">
            <div class="row sticky-parent">



                <!-- Content -->
                <div class="col-12 col-md-6" style="margin: 0 auto">
                    <div class="box shadow">
                        <h2 class="title title--h3">ارسال کد تائید</h2>

                        <form asp-action="ConfirmSmsCode" asp-route-returnurl="@ViewData["returnUrl"]" method="post">
                            <input type="hidden" asp-for="Mobile" value="@ViewBag.Mobile" />
                            <p class="timeline__description">کد ۵ رقمی پیامک شده را وارد کنید</p>
                            <div class="row">
                                <div class="form-group col-12 col-md-12">
                                    <i class="font-icon icon-user"></i>

                                    <input asp-for="ConfirmCode" type="number" class="input input__icon form-control" required
                                           oninvalid="setCustomValidity('کد پیامک شده را وارد کنید')" onkeyup="setCustomValidity('')" >
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 col-md-12 order-1 order-md-2 text-left">
                                    <button type="submit" class="btn col-md-12">
                                        <i class="font-icon icon-send"></i> ارسال تايید
                                    </button>

                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </main>



    <!-- Demo Menu -->
    <!-- JavaScripts -->
    <script src="~/assets/js/jquery-3.4.1.min.js"></script>
    <script src="~/assets/js/plugins.min.js"></script>
    <script src="~/assets/js/common.js"></script>

    <script src="~/assets/demo/plugins-demo.js"></script>
</body>
</html>