            $.ajax({
                url: "/Plan/GetPlanAnswerQuestion?planId=" + planId,
                dataType: 'html',
                success: function (data) {
                    $('#modal-viewAQ').html(data);
                }
            });
        }


        function setplanId(planId) {
            $("#planId").val(planId);
        }


        $(function () {


