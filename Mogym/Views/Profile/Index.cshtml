@model Mogym.Application.Records.Profile.TrainerProfileRecord

<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta property="og:title" content="موجیم - @(Model.FirstName +" " +Model.LastName) " />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="http://mogym.ir/img/mogym-transparent.png" /> 
    <meta property="og:image:alt" content="موجیم تخصصی ترین مرجع مربیگری بدنسازی آنلاین" />
    <meta property="og:url" content="http://mogym.ir/" />
    <!--favicon icon-->
    <link rel="icon" href="~/img/favicon.ico" type="image/png" sizes="16x16">

    <!--title-->
    <title>موجیم - @(Model.FirstName + " " + Model.LastName)</title>

    <!--build:css-->
    <link rel="stylesheet" href="~/mainassets/css/main.css">
    <!-- endbuild -->
</head>

<body>

    <!--preloader start-->
    <div id="preloader">
        <div class="preloader-wrap">
            <img src="~/img/mogym-transparent.png" alt="mogym" class="img-fluid">
            <div class="thecube">
                <div class="cube c1"></div>
                <div class="cube c2"></div>
                <div class="cube c4"></div>
                <div class="cube c3"></div>
            </div>
        </div>
    </div>
    <!--preloader end-->
    <!--header section start-->
    <header class="header">
        <!--start navbar-->
        <nav class="navbar navbar-expand-lg fixed-top custom-nav">
            <div class="container">
                <a class="navbar-brand" asp-action="Index" asp-controller="Home">
                    <img src="~/img/mogym-transparent.png" alt="لوگو" class="img-fluid">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="ناوبری را تغییر دهید">
                    <span class="ti-menu"></span>
                </button>

                <div class="collapse navbar-collapse h-auto" id="navbarSupportedContent">
                    <li><a asp-controller="Account" asp-action="Index" class="page-scroll">خانه</a></li>
                </div>
            </div>
        </nav>
    </header>
    <!--header section end-->

    <div class="main">

        <!--page header section start-->
        <section class="page-header-section ptb-100 bg-image" image-overlay="8">
            <div class="background-image-wraper" style="background: url('~/mainassets/img/hero-bg-1.jpg'); opacity: 1;"></div>
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-9 col-lg-7">
                        <div class="page-header-content text-white pt-4">
@*                            <h1 class="text-white mb-0">@Model.FirstName @Model.LastName</h1>
*@                            @*                            <p class="lead">لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است.</p>
                            *@
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--page header section end-->
        <!--breadcrumb section start-->
        <div class="breadcrumb-bar gray-light-bg border-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="custom-breadcrumb">
                            <ol class="breadcrumb pl-0 mb-0 bg-transparent">
                                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">خانه</a></li>
                                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Trainers">مربیان</a></li>
                                <li class="breadcrumb-item active">@Model.FirstName @Model.LastName</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--breadcrumb section end-->


        <section class="team-single-section ptb-100">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-12 col-sm-12 col-lg-6">
                        <div class="team-single-img">
                            @{
                                if (!string.IsNullOrWhiteSpace(Model.ProfilePic))
                                {
                                    <img src="/ProfilePic/@Model.ProfilePic" alt="@Model.ProfilePic" class="img-fluid rounded shadow-sm">
                                }
                                else
                                {
                                    <img src="/img/avatar5.png" alt="عضو" class="img-fluid rounded shadow-sm">

                                }

                            }

                        </div>
                    </div>
                    <div class="col-md-12 col-sm-12 col-lg-6">
                        <div class="team-single-text">
                            <div class="team-name mb-4">
                                <h4 class="mb-1">@Model.FirstName @Model.LastName</h4>
                                <span>@Model.UserName@@</span>
                            </div>
                            <ul class="team-single-info">
                                <li></li>
                                <li></li>
                            </ul>
                            <div class="text-content mt-20">
                                @{
                                    if (!string.IsNullOrWhiteSpace(Model.Biography))
                                    {
                                        @Html.Raw(Model.Biography.Replace("\r\n", "<br />"))

                                    }
                                }
                            </div>
                            <div class="action-btns mt-4">
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        <a asp-action="AnswerQuestion" asp-controller="Question" asp-route-trainerId="@Model.TrainerId" class="d-flex align-items-center app-download-btn btn btn-outline-brand-02 btn-rounded">
                                            <div class="download-text text-left">
                                                <h5 class="mb-0">درخواست برنامه</h5>
                                            </div>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-5">
                    <div class="col-md-6 col-sm-6 col-12">
                        <div class="section-heading">
                            <h5>عناوین و افتخارات</h5>
                            <div class="section-heading-line-left"></div>
                        </div>
                        <ul class="check-list-wrap pt-3">
                            @{
                                if (Model.TrainerAchievementRecords.Any())
                                {
                                    @foreach (var achievement in Model.TrainerAchievementRecords)
                                    {
                                        <li>
                                            <strong>
                                                @achievement.Title
                                            </strong>
                                            - @achievement.Date
                                        </li>

                                    }
                                }
                            }

                        </ul>
                    </div>
                </div>
            </div>
        </section>
        
        
        <section id="pricing" class="pricing-section ptb-100 ">
            <div class="container">
                <div class="row align-items-center justify-content-md-center justify-content-center">
                    
                    @{
                        if (Model.TrainerPlanCostRecords.Any())
                        {
                            foreach (var cost in Model.TrainerPlanCostRecords)
                            {
                                <div class="col-lg-4 col-md-6 col-sm-8">
                                    <div class="text-center bg-white single-pricing-pack mt-4">
                                        <div class="price-img pt-4">
                                            <img src="~/mainassets/img/icon/icon-2.svg" alt="قیمت" width="120" class="img-fluid">
                                        </div>
                                        <div class="py-4 border-0 pricing-header">
                                            <div class="price text-center mb-0 monthly-price color-secondary" style="display: block;">@cost.Cost.Value.ToString("N0") ریال<span></span></div>
                                        </div>
                                        <div class="price-name">
                                            <h5 class="mb-0">نوع برنامه</h5>
                                        </div>
                                        <div class="pricing-content">
                                            <ul class="list-unstyled mb-4 pricing-feature-list">
                                                <li><span></span> <span>@cost.TrainerPlan</span></li>
                                                <li></li>
                                                <li></li>

                                            </ul>
                                        </div>
                                    </div>
                                </div>

                            }
                        }
                }

                </div>
            </div>
        </section>
        


    </div>

    <!--footer section start-->
    <footer class="footer-1 ptb-60 gradient-bg">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-4 mb-4 mb-md-4 mb-sm-4 mb-lg-0">
                </div>
            </div>
        </div>
        <!--end of container-->
    </footer>


    <!--scroll bottom to top button start-->
    <div class="scroll-top scroll-to-target primary-bg text-white" data-target="html">
        <span class="fas fa-hand-point-up"></span>
    </div>
    <!--scroll bottom to top button end-->
    <!--build:js-->
    <script src="~/mainassets/js/vendors/jquery-3.5.1.min.js"></script>
    <script src="~/mainassets/js/vendors/popper.min.js"></script>
    <script src="~/mainassets/js/vendors/bootstrap.min.js"></script>
    <script src="~/mainassets/js/vendors/jquery.easing.min.js"></script>
    <script src="~/mainassets/js/vendors/owl.carousel.min.js"></script>
    <script src="~/mainassets/js/vendors/countdown.min.js"></script>
    <script src="~/mainassets/js/vendors/jquery.waypoints.min.js"></script>
    <script src="~/mainassets/js/vendors/jquery.rcounterup.js"></script>
    <script src="~/mainassets/js/vendors/magnific-popup.min.js"></script>
    <script src="~/mainassets/js/vendors/validator.min.js"></script>
    <script src="~/mainassets/js/app.js"></script>
    <!--endbuild-->

</body>
</html>